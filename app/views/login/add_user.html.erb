<h1><%=t '.title' %></h1>
<div class="default-form">
<fieldset>
  <legend><%=t '.enter_user_informations' %></legend>
  <%= form_for :user do |form| %>
  <p>
    <label for="user_name"><%=t '.name' %>: </label>
    <%= form.text_field :name, :size => 40 %>
  </p>
  <p>
    <label for="user_password"><%=t '.password' %>: </label>
    <%= form.password_field :password, :size => 40 %>
  </p>
  <p>
    <label for="user_password_confirmation"><%=t '.confirmation' %>: </label>
    <%= form.password_field :password_confirmation, :size => 40 %>
  </p>
  <%= submit_tag t('.add_user'), :class => "submit" %>
  <% end %>
</fieldset>
</div>
